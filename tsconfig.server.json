{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./server",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./build-server",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5"
  },
  "include": ["server", "server/"]
}
